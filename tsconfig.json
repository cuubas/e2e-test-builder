{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "baseUrl": "./src/",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "allowJs": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "es2020"
  },
  "angularCompilerOptions": {
    "enableIvy": true
  }
}
